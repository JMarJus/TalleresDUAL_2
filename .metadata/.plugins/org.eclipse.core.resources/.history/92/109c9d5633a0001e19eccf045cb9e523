package com.nttdata;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.nttdata.persistence.Person;
import com.nttdata.services.AssignmentServiceI;

@SpringBootApplication
public class SpringTaller01Application implements CommandLineRunner {

	@Autowired
	private AssignmentServiceI assignmentService;

	public static void main(String[] args) {
		SpringApplication.run(SpringTaller01Application.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		final Person person = new Person();
		person.setName("Nombre");
		person.setSurname("Apellido");
		assignmentService.newPerson(person);
		for (Person personGot: assignmentService.getPersonByName("Nombre")) {
			System.out.println(personGot.getSurname());
		}
	}

}
