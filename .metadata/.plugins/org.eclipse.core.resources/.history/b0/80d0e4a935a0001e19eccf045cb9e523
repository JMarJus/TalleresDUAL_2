package com.nttdata.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.nttdata.persistence.Floor;
import com.nttdata.persistence.FloorRepositoryI;

@Service
public class FloorServiceImpl implements FloorServiceI {

	@Autowired
	private FloorRepositoryI floorRepository;

	@Override
	public void newPerson(Floor person) {
		floorRepository.save(person);
	}

	@Override
	public void remPerson(Person person) {
		floorRepository.delete(person);
	}

	@Override
	public List<Person> getAllPeople() {
		return floorRepository.findAll();
	}

	@Override
	public List<Person> getPersonByName(String name) {
		return floorRepository.findByName(name);
	}
}
